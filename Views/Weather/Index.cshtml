@model WeatherApp.Models.WeatherModel
@using System.Globalization

@{
    ViewData["Title"] = "Weather Forecast";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Weather Forecast</h1>

    <form method="post" class="mb-4">
        <div class="input-group">
            <input type="text" name="city" class="form-control" placeholder="Enter city..." required/>
            <button type="submit" class="btn btn-primary">Get weather forecast</button>
        </div>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (Model != null)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title">Current weather in @Model.City</h3>
                <p class="card-text fs-5">@Model.WeatherText
                    <img src="@Model.IconUrl" alt="@Model.WeatherText"/></p>
                <p class="card-text text-muted">@Model.Temperature</p>
            </div>
        </div>

        <h4 class="mb-3">5-Day Forecast</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var day in Model.Forecasts)
            {
                <div class="col">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <h5 class="card-title">@DateTime.Parse(day.Date, CultureInfo.InvariantCulture).ToString("dddd, MMM yyyy")</h5>
                            <p class="card-text">@day.IconPhrase</p>
                            <img src="@day.IconUrl" alt="@day.IconPhrase" class="mb-2" style="width:64px;"/>
                            <p class="card-text"><strong>Min:</strong> @day.MinTemp</p>
                            <p class="card-text"><strong>Max:</strong> @day.MaxTemp</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>