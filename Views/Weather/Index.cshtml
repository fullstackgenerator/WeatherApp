@using System.Globalization
@using System.Security.Authentication
@model WeatherApp.Models.WeatherModel

@{
    ViewData["Title"] = "Weather";
}

<form method="post">
    <input type="text" name="city" placeholder="enter city" required=""/>
    <button type="submit">Get weather</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

@if (Model != null)
{
    <h2>Weather in @Model.City</h2>
    <p>@Model.WeatherText</p>
    <p>@Model.Temperature</p>
    
    <h3>5-day forecast</h3>
    <table>
        <thead>
        <tr>
            <th>Date</th>
            <th>Conditions</th>
            <th>Min Temp</th>
            <th>Max Temp</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var day in Model.Forecasts)
        {
            <tr>
                <td>@DateTime.Parse(day.Date, CultureInfo.InvariantCulture).ToString("MM/dd/yyyy HH:mm:ss")</td>
                <td>@day.IconPhrase</td>
                <td>@day.MinTemp</td>
                <td>@day.MaxTemp</td>
            </tr>
        }
        </tbody>
    </table>
}